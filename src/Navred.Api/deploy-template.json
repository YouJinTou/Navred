{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Navred API",
  "Parameters": {
    "stage": {
      "Type": "String",
      "AllowedValues": [
        "qa",
        "prod"
      ],
      "Default": "qa"
    }
  },
  "Conditions": {
    "IsQA": {
      "Fn::Equals": [
        {
          "Ref": "stage"
        },
        "qa"
      ]
    },
    "IsProd": {
      "Fn::Equals": [
        {
          "Ref": "stage"
        },
        "prod"
      ]
    }
  },
  "Resources": {
    "Api": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "Handler": "Navred.Api::Navred.Api.LambdaEntryPoint::FunctionHandlerAsync",
        "Runtime": "dotnetcore2.1",
        "CodeUri": "",
        "FunctionName": "qa-api",
        "MemorySize": 128,
        "Timeout": 30,
        "Role": null,
        "Policies": [
          "AWSLambdaFullAccess"
        ],
        "Environment": {
          "Variables": {
            "STAGE": "qa"
          }
        },
        "Events": {
          "ProxyResource": {
            "Type": "Api",
            "Properties": {
              "Path": "/{proxy+}",
              "Method": "ANY"
            }
          },
          "RootResource": {
            "Type": "Api",
            "Properties": {
              "Path": "/",
              "Method": "ANY"
            }
          }
        }
      }
    },
    "ItinerariesTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "AttributeDefinitions": [
          {
            "AttributeName": "From",
            "AttributeType": "S"
          },
          {
            "AttributeName": "UtcTimestamp",
            "AttributeType": "N"
          }
        ],
        "BillingMode": "PROVISIONED",
        "KeySchema": [
          {
            "AttributeName": "From",
            "KeyType": "HASH"
          },
          {
            "AttributeName": "UtcTimestamp",
            "KeyType": "RANGE"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "20",
          "WriteCapacityUnits": "10"
        },
        "TableName": "qa_Itineraries"
        //"TimeToLiveSpecification": "TimeToLiveSpecification" TODO
      }
    }
  },

  "Outputs": {
    "QaApiURL": {
      "Description": "API endpoint URL for the QA environment",
      "Value": {
        "Fn::Sub": "https://${ServerlessRestApi}.execute-api.${AWS::Region}.amazonaws.com/qa/"
      },
      "Condition": "IsQA"
    },
    "ProdApiURL": {
      "Description": "API endpoint URL for the production environment",
      "Value": {
        "Fn::Sub": "https://${ServerlessRestApi}.execute-api.${AWS::Region}.amazonaws.com/prod/"
      },
      "Condition": "IsProd"
    }
  }
}
